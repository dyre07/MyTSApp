<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_guru"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.project.xiirpl307172737.myapplication.MenuGuruActivity">

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Large Text" />

    <ImageView
        android:id="@+id/imageViewPengumuman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageViewBarang"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="50%"
        app:srcCompat="@drawable/pengumuman" />

    <ImageView
        android:id="@+id/imageViewBarang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="50%"
        app:srcCompat="@drawable/barang" />

    <ImageView
        android:id="@+id/imageViewJadwal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageViewGuru"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="50%"
        app:srcCompat="@drawable/jadwal" />

    <ImageView
        android:id="@+id/imageViewGuru"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/imageViewPengumuman"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:layout_heightPercent="40%"
        app:layout_widthPercent="50%"
        app:srcCompat="@drawable/guru" />

</android.support.percent.PercentRelativeLayout>
